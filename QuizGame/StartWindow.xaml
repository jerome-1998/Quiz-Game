<Window x:Class="QuizGame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGame"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800" Background="Black" ContentRendered="Window_ContentRendered"
        WindowStyle="None">
    <Grid>
        <StackPanel>
            <Label Foreground="White" FontWeight="Bold" FontSize="50" HorizontalContentAlignment="Center">Quiz-Game 2020</Label>
            <ProgressBar x:Name="startProgressBar" Width="600" Height="50"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
